<%  if(success && success.length) {%>
  <div class="container d-flex justify-content-center">
    <div class="alert w-75 alert-success text-center alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  <% } %>
<%  if(error && error.length) {%>
  <div class="container d-flex justify-content-center">
    <div class="alert w-75 alert-danger text-center alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  <% } %>